{
  "include-component-in-tag": false,
  "extra-files": [
    {
      "type": "yaml",
      "path": "helm/Chart.yaml",
      "jsonpath": "$.appVersion"
    }
  ],
  "packages": {
    ".": {
      "component": "operator",
      "release-type": "go",
      "exclude-paths": [
        "helm"
      ]
    },
    "helm": {
      "release-type": "helm",
      "component": "helm"
    }
  },
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "operator",
      "components": [
        "operator",
        "helm"
      ]
    }
  ],
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
