{
  "extra-files": [
    {
      "type": "yaml",
      "path": "helm/Chart.yaml",
      "jsonpath": "$.appVersion"
    }
  ],
  "packages": {
    ".": {
      "component": "operator",
      "release-type": "go"
    },
    "helm": {
      "release-type": "helm",
      "component": "helm"
    }
  },
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "operator",
      "components": [
        "operator",
        "helm"
      ]
    }
  ]
}
